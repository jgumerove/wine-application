<h1>Add a wine to your collection</h1>

<%= form_for @wine do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :country %><br>
  <%= f.text_field :country %><br>
  <%= f.label :rating %><br>
  <%= f.number_field :rating,  in: 1..100 %><br>
  <%= f.label :opinion %><br>
  <%= f.text_area(:opinion, cols: 40, rows: 5) %><br>
  <%= f.label :price %><br>
  <%= f.number_field :price %><br>
  <%= f.submit %>
<% end %>
